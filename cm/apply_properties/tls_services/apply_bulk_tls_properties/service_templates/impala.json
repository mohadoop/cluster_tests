{
   "services": [
        {
            "serviceType": "{{ service_type }}",
            "refName": "{{ service_ref_name }}",
            "roleConfigGroups": [
{{ role_config_groups }}
            ], 
            "serviceConfigs": [
                {"name": "ssl_client_ca_certificate", "value": "{{ cluster_ssl_cert_path }}{{ cluster_ca_cert_filename }}"},
                {"name": "impala_truststore_file", "value": "{{ cluster_keystore_path }}{{ cluster_truststore_filename }}"},
                {"name": "ssl_private_key", "value": "{{ cluster_ssl_cert_path }}{{ cluster_key_pem_filename }}"},
                {"name": "ssl_server_certificate", "value": "{{ cluster_ssl_cert_path }}{{ cluster_cert_filename }}"},
                {"name": "impala_truststore_password", "value": "{{ truststore_password }}"},
                {"name": "client_services_ssl_enabled", "value": "true"},
                {"name": "ssl_private_key_password", "value": "{{ key_password  }}"}
            ]
        }
    ]
}