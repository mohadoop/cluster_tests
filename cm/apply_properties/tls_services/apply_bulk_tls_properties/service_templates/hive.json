{
   "services": [
        {
            "serviceType": "{{ service_type }}",
            "refName": "{{ service_ref_name }}",
            "serviceConfigs": [
                {"name": "hiveserver2_enable_ssl", "value": "true"}, 
                {"name": "hiveserver2_keystore_path", "value": "{{ cluster_keystore_path }}{{ cluster_keystore_filename }}"}, 
                {"name": "hiveserver2_keystore_password", "value": "{{ keystore_password }}"},
                {"name": "hiveserver2_truststore_file", "value": "{{ cluster_keystore_path }}{{ cluster_truststore_filename }}"}, 
                {"name": "hiveserver2_truststore_password", "value": "{{ truststore_password }}"},
                {"name": "ssl_enabled_database", "value": "true"},
                {"name": "ssl_client_truststore_location", "value": "{{ cluster_keystore_path }}{{ cluster_truststore_filename }}"},
                {"name": "ssl_client_truststore_password", "variable": "{{ truststore_password }}"}
            ]
        }
    ]
}