{
   "services": [
        {
            "serviceType": "{{ service_type }}",
            "refName": "{{ service_ref_name }}",
            "roleConfigGroups": [
{{ role_config_groups }}
            ],
            "serviceConfigs": [
                {"name": "hdfs_hadoop_ssl_enabled", "value": "true"},
                {"name": "ssl_client_truststore_location", "value": "{{ cluster_keystore_path }}{{ cluster_truststore_filename }}"},
                {"name": "ssl_client_truststore_password", "value": "{{ truststore_password }}"},
                {"name": "hadoop_group_mapping_ldap_keystore", "value": "{{ cluster_keystore_path }}{{ cluster_keystore_filename }}"},
                {"name": "hadoop_group_mapping_ldap_keystore_passwd", "value": "{{ keystore_password }}"},
                {"name": "ssl_server_keystore_location", "value": "{{ cluster_keystore_path }}{{ cluster_keystore_filename }}"},
                {"name": "ssl_server_keystore_password", "value": "{{ keystore_password }}"},
                {"name": "ssl_server_keystore_keypassword", "value": "{{ key_password }}"},
                {"name": "hadoop_group_mapping_ldap_use_ssl", "value": "true"}
            ]
        }
    ]
}